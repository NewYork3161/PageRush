<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>PageRush | Home</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    :root {
      --accent-color: #056A64;
      --accent-hover: #045A55;
      --highlight: #FFD700;
    }

    body {
      background-color: #ffffff;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* ===== NAVBAR ===== */
    header {
      background-color: var(--accent-color);
    }

    .navbar-brand {
      font-weight: bold;
      color: var(--highlight) !important;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .nav-link {
      color: rgba(255, 255, 255, 0.75);
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .nav-link:hover {
      color: #fff !important;
    }

    .nav-link.active {
      color: #fff !important;
      font-weight: 600;
    }

    .form-control-search {
      background-color: #fff;
      color: var(--accent-color);
      border-radius: 25px;
      border: 2px solid var(--accent-color);
      padding: 0.4rem 1rem;
      transition: all 0.3s ease;
    }

    .form-control-search:focus {
      box-shadow: 0 0 6px var(--accent-color);
      border-color: var(--accent-hover);
      outline: none;
    }

    .btn-outline-light:hover {
      background-color: #fff;
      color: var(--accent-color);
    }

    /* ===== SIGNUP BUTTON FIX ===== */
    .btn-warning {
      background-color: var(--highlight);
      border: none;
      color: #000;
      border-radius: 8px;
      padding: 0.55rem 1.25rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-warning:hover {
      background-color: #ffc107;
      color: var(--accent-color);
      transform: scale(1.05);
    }

    /* ===== BOOK GRID ===== */
    .album {
      padding-top: 3rem;
      padding-bottom: 3rem;
    }

    .book-card {
      border: none;
      border-radius: 10px;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .book-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .book-card img {
      height: 240px;
      object-fit: cover;
    }

    .book-card .card-body {
      padding: 0.8rem;
    }

    .book-card h5 {
      font-size: 1rem;
      font-weight: 600;
      color: var(--accent-color);
      margin-bottom: 0.4rem;
    }

    .book-card p {
      font-size: 0.85rem;
      color: #555;
      margin-bottom: 0.5rem;
    }

    .book-card .price {
      font-weight: 600;
      font-size: 0.9rem;
      color: var(--accent-hover);
    }

    .rating i {
      font-size: 0.85rem;
    }

    footer {
      background-color: var(--accent-color);
      color: white;
      text-align: center;
      padding: 1rem 0;
      margin-top: 3rem;
    }
  </style>
</head>

<body>
  <!-- ===== NAVBAR ===== -->
  <header class="p-3">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-between">
        <a href="/" class="navbar-brand text-decoration-none">
          <i class="bi bi-book-fill text-warning"></i> PageRush
        </a>

        <ul class="nav mb-2 mb-lg-0">
          <li><a href="#" class="nav-link active px-3">Home</a></li>
          <li><a href="#" class="nav-link px-3">Products</a></li>
          <li><a href="#" class="nav-link px-3">Pricing</a></li>
          <li><a href="#" class="nav-link px-3">FAQs</a></li>
          <li><a href="#" class="nav-link px-3">About</a></li>
        </ul>

        <form class="d-flex align-items-center" role="search">
          <input type="search" class="form-control form-control-search me-3" placeholder="Search books..." aria-label="Search">
          <button type="button" class="btn btn-outline-light me-2">Login</button>
          <!-- Sign Up Button Fixed and Linked -->
          <a href="/signup" class="btn btn-warning text-decoration-none">Sign Up</a>
        </form>
      </div>
    </div>
  </header>

  <!-- ===== FEATURED BOOKS ===== -->
  <div class="album py-5 bg-light">
    <div class="container">
      <h2 class="text-center mb-4 fw-bold text-dark">Discover Popular Books</h2>

      <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-4">
        <% const books = [
          { title: "The Silent Forest", price: "$14.99", img: "https://picsum.photos/200/260?random=1", desc: "A haunting mystery.", rating: 4 },
          { title: "Quantum Hearts", price: "$19.99", img: "https://picsum.photos/200/260?random=2", desc: "A romantic journey through science.", rating: 5 },
          { title: "Echoes of War", price: "$12.49", img: "https://picsum.photos/200/260?random=3", desc: "An epic tale of courage.", rating: 3 },
          { title: "The Art of Focus", price: "$9.99", img: "https://picsum.photos/200/260?random=4", desc: "Master your mind.", rating: 5 },
          { title: "Cosmic Threads", price: "$15.50", img: "https://picsum.photos/200/260?random=5", desc: "Explore the universe.", rating: 4 },
          { title: "The Glass Empire", price: "$22.00", img: "https://picsum.photos/200/260?random=6", desc: "A story of betrayal.", rating: 5 },
          { title: "Neon Dreams", price: "$17.99", img: "https://picsum.photos/200/260?random=7", desc: "A cyberpunk adventure.", rating: 4 },
          { title: "Fire and Frost", price: "$13.49", img: "https://picsum.photos/200/260?random=8", desc: "Opposites collide.", rating: 5 },
          { title: "The Last Signal", price: "$11.25", img: "https://picsum.photos/200/260?random=9", desc: "Sci-fi suspense.", rating: 3 },
          { title: "Garden of Stars", price: "$10.99", img: "https://picsum.photos/200/260?random=10", desc: "Fantasy and wonder.", rating: 5 },
          { title: "Winds of Ash", price: "$16.00", img: "https://picsum.photos/200/260?random=11", desc: "Fire, loss, and rebirth.", rating: 4 },
          { title: "Beyond the Gate", price: "$18.25", img: "https://picsum.photos/200/260?random=12", desc: "A mysterious portal.", rating: 4 }
        ]; %>

        <% books.forEach(book => { %>
          <div class="col">
            <div class="card book-card h-100">
              <img src="<%= book.img %>" class="card-img-top" alt="<%= book.title %>">
              <div class="card-body d-flex flex-column">
                <h5><%= book.title %></h5>
                <p><%= book.desc %></p>
                <div class="mt-auto">
                  <p class="price mb-1"><%= book.price %></p>
                  <div class="rating text-warning mb-2">
                    <% for (let i = 0; i < 5; i++) { %>
                      <% if (i < book.rating) { %>
                        <i class="bi bi-star-fill"></i>
                      <% } else { %>
                        <i class="bi bi-star"></i>
                      <% } %>
                    <% } %>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-sm btn-outline-success">Rate</button>
                    <i class="bi bi-cart3 fs-5 text-success"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

  <footer>
    <p class="mb-0">© 2025 PageRush — Built for readers. Trusted by sellers.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
